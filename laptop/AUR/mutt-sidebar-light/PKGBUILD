# ==================================================================
# FILE     PKGBUILD (for mutt-sidebar-light)
# MACHINE  laptop
# INFO     "-light" means: no imap, no pop support, since this is 
#          done over mbsync
#
# DATE     20.12.2013
# OWNER    Bischofberger
# ==================================================================


## PKGBUILD [plain_text]
# Contributor: tobias [tobias [at] archlinux.org]


pkgname=mutt-sidebar
pkgver=1.5.21
pkgrel=11
pkgdesc='Small but very powerful text-based mail client'
url='http://www.mutt.org/'
license=('GPL')
backup=('etc/Muttrc')
arch=('i686' 'x86_64')
conflicts=('mutt')
optdepends=('smtp-forwarder: to send mail')
depends=('gpgme' 'ncurses' 'openssl' 'libsasl' 'gdbm' 'libidn' 'mime-types' 'krb5')
provides=('mutt')
conflicts=('mutt')
source=("ftp://ftp.mutt.org/mutt/devel/mutt-${pkgver}.tar.gz"
"http://dbg.download.sourcemage.org/grimoire/codex/stable/mail/mutt/patches/trash_folder/trash_folder-1.5.18.patch.bz2"
"http://lunar-linux.org/~tchan/mutt/patch-1.5.21.sidebar.20130219.txt"
"sidebar-corrected-by-jf.patch"
"pop-cachedir.patch"
"crypt-gpgme.patch"
)

build() {
        cd "${srcdir}/mutt-${pkgver}"

        patch -i ../pop-cachedir.patch # FS#31536
        patch -p1 -i ../crypt-gpgme.patch # FS#31735

        msg "Patching... Sidebar"
        patch -p1 -i ${srcdir}/patch-1.5.21.sidebar.20130219.txt

        msg "Patching... Sidebar"
        patch -p1 -i ${srcdir}/sidebar-corrected-by-jf.patch

        msg "Patching... Trashfolder"
        patch -p1 -i ${srcdir}/trash_folder-1.5.18.patch

		# BB: disabled pop, imap
        ./configure \
                --prefix=/usr \
                --sysconfdir=/etc \
                --enable-gpgme \
                --disable-pop \
                --disable-imap \
                --enable-smtp \
                --enable-hcache \
                --with-curses=/usr \
                --with-regex \
                --with-gss=/usr \
                --with-ssl=/usr \
                --with-sasl \
                --with-idn \

        make
}

package() {
        cd "${srcdir}/mutt-${pkgver}"
        make DESTDIR="${pkgdir}" install

        rm "${pkgdir}"/usr/bin/{flea,muttbug}
        rm "${pkgdir}"/usr/share/man/man1/{flea,muttbug}.1
        rm "${pkgdir}"/etc/mime.types{,.dist}
        install -Dm644 contrib/gpg.rc "${pkgdir}"/etc/Muttrc.gpg.dist
}
md5sums=('a29db8f1d51e2f10c070bf88e8a553fd'
         '9d95c08295f8ec5171f774f776ef8413'
         '537e6e55255ce82bd7877f4b696bca50'
         '5872ba294d010ed2115fe4c0be9452d4'
         '7df7780d8bbdcbad1eb0d673de9976b2'
         '6cb5b3ca56bd03c00c6768864070a2d4')
